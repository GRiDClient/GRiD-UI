info {
	name: Maya Theme
	creator: Stumblinbear
}

vars {
	maincolor: #FF1919
	brightermaincolor: #FF3B3B
}

global {
	color: #000
}

separator {
	border: outer 1px solid [brightermaincolor]
}

progressbar {
	background-color: #777
	border-bottom: outer 2px solid #999
}

progressbar .overlay {
	background-color: #44EE44
	border-bottom: outer 2px solid #77FF77
}

panel {
	background-color: #FFF
	opacity: 80%
	border-bottom: inner 3px solid [brightermaincolor]
}

window {
	background-color: #FFF
	opacity: 90%
	border: outer 1px solid [brightermaincolor]
	border-bottom: outer 5px solid [brightermaincolor]
}

window .title {
	height: 25px
	
	color: #FFF
	background-color: [maincolor]
	border-bottom: inner 5px solid [brightermaincolor]
}

notification {
	width: 200px
	height: 30px
	margin: -100px
	color: #FFF
	
	background-color: #000
	opacity: 100%
	border-bottom: inner 3px solid #000
}

notification #warning {

}

notification #error {

}